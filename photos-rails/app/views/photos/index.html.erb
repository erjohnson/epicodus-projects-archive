<h1>Omg Selfies</h1>
<br>
<%= link_to "New Selfie", new_photo_path, :class=>"btn btn-lg btn-default" %>
<br>
<br>
<% if current_user %>
  <div class="row">
    <h2>Recommended</h2>
    <% current_user.recommend.each do |photo| %>
    <div class="col-sm-6 col-md-3">
      <a href = "<%= photo_path(photo.id) %>"><%= image_tag photo.picture.url(:thumb), :class=>"thumbnail" %></a>
      <p><%= photo.favorites.count %> <span class="glyphicon glyphicon-heart"></span></p>
      <ul>
      <% photo.users.each do |user| %>
        <li><%= user.email %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
<% end %>
<hr>
<div class="row">
  <% @photos.each do |photo| %>
  <div class="col-sm-6 col-md-3">
    <a href = "<%= photo_path(photo.id) %>"><%= image_tag photo.picture.url(:thumb), :class=>"thumbnail" %></a>
    <p><%= photo.favorites.count %> <span class="glyphicon glyphicon-heart"></span></p>
    <ul>
    <% photo.users.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
</div>
